<%- include("partials/header.ejs")%>
<body>
    <%- include("partials/navbar.ejs")%>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label for="">Resposta:</label>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">responder</button>
        </form>
        <hr>
        <h3>Resposta</h3>
        <% respostas.forEach(resposta =>{ %>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>
         <% }) %>
    </div>

</body>

<%- include("partials/footer.ejs")%>